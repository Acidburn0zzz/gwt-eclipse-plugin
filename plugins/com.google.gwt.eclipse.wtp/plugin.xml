<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>  
    
  <!-- http://www.eclipse.org/articles/Article-BuildingProjectFacets/tutorial.html -->
  
  <extension point="org.eclipse.wst.common.project.facet.core.facets">
  
    <!-- Preset -->
    <preset id="com.google.gwt.facet.preset.gwtonly">
      <label>GWT Project</label>
      <description>Enables GWT project runtime.</description>
      <facet id="jst.java" version="1.7,1.8"/>
      <facet id="com.google.gwt.facet" version="1.0"/>
    </preset>
    
    <!-- Facet -->   
    <project-facet id="com.google.gwt.facet">
      <category>com.google.gwt.facet</category>
      <label>GWT</label>
      <description>
        Enables GWT SDK use for project.
      </description>
    </project-facet>  
    
    <!-- Version -->
    <project-facet-version facet="com.google.gwt.facet" version="1.0">
      <requires facet="java" version="[1.7"/>
      <requires facet="jst.web" version="[2.2"/>
    </project-facet-version>
  
  	<!-- Install -->
    <action 
    	facet="com.google.gwt.facet"
        id="com.google.gwt.facet.install"
        type="install" >
     	
     	<delegate class="com.google.gwt.eclipse.wtp.facet.GwtSdkDelegate"/>
        
        <config-factory 
        	class="com.google.gwt.eclipse.wtp.facet.datamodel.GwtFacetInstallDataModelProvider">
        </config-factory>
    </action>
    
    <!-- Uninstall -->
    <action
		  facet="com.google.gwt.facet"
		  id="com.google.gwt.facet.uninstall"
		  type="uninstall">
		<delegate class="com.google.gwt.eclipse.wtp.facet.GwtFacetUninstallDelegate"/>
	</action>
  
  </extension>
  
  
   <!-- Wizards -->
   <extension point="org.eclipse.wst.common.project.facet.ui.wizardPages">
		<wizard-pages action="com.google.gwt.facet.install">
		    <page class="com.google.gwt.eclipse.wtp.wizards.GwtFacetWizardPage"/>
		</wizard-pages>
   </extension>
   
   
   <!-- Classpath -->
   <!--<extension
          point="org.eclipse.jdt.core.classpathContainerInitializer">
       <classpathContainerInitializer
             class="com.google.gwt.eclipse.wtp.classpath.GwtWtpClasspathContainerInitializer"
             id="com.google.gwt.eclipse.wtp.GWT_WTP_CONTAINER">
       </classpathContainerInitializer>
   </extension>-->
   <extension
         point="org.eclipse.jdt.launching.classpathProviders">
      <classpathProvider
            class="com.google.gwt.eclipse.core.launch.ModuleClasspathProvider"
            id="com.google.gwt.eclipse.core.moduleClasspathProvider">
      </classpathProvider>
   </extension>
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
            class="com.google.gwt.eclipse.core.runtime.GWTRuntimeContainerInitializer"
            id="com.google.gwt.eclipse.core.GWT_CONTAINER">
      </classpathContainerInitializer>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            class="com.google.gwt.eclipse.core.runtime.ui.GWTRuntimeContainerPage"
            id="com.google.gwt.eclipse.core.GWT_CONTAINER"
            name="Google Web Toolkit">
      </classpathContainerPage>
   </extension>
  
</plugin>
